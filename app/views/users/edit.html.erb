<% provide(:title, "Edit user") %>
<h1>정보 수정</h1>

<div class="row">
  <div class="col-sm-6 col-sm-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control input-lg" %>
    
      <%= f.label :email %>
      <%= f.text_field :email, class: "form-control input-lg"  %>
    
      <%= f.label :phone, "연락처"%>
      <%= f.text_field :phone, class: "form-control input-lg" %>

      <%= f.label :password %>
      <%= f.password_field :password, class: "form-control input-lg"  %>

      <%= f.label :password_confirmation, "Confirm Password" %>
      <%= f.password_field :password_confirmation, class: "form-control input-lg"  %>

      <%= f.submit "Save changes", class: "btn btn-lg btn-success" %>
    <% end %>
  </div>
</div>