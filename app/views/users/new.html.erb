<% provide(:title, 'Sign up') %>
<h1>가입신청</h1>

<div class="row">
  <div class="col-sm-6 col-sm-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name, "이름" %>
      <%= f.text_field :name, class: "form-control input-lg", placeholder: "예) 홍길동" %>

      <%= f.label :email, "이메일"%>
      <%= f.text_field :email, class: "form-control input-lg", placeholder: "예) noname@iambox.com" %>
    
      <%= f.label :phone, "연락처"%>
      <%= f.text_field :phone, class: "form-control input-lg", placeholder: "예) 012-3456-7890" %>

      <%= f.label :password, "비밀번호"%>
      <%= f.password_field :password, class: "form-control input-lg", placeholder: "비밀번호" %>

      <%= f.label :password_confirmation, "비밀번호 확인" %>
      <%= f.password_field :password_confirmation, class: "form-control input-lg", placeholder: "비밀번호 확인" %>

      <%= f.submit "작성완료", class: "btn btn-lg btn-success" %>
    <% end %>
  </div>
</div>