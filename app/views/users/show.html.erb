<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-sm-4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <p><%= @user.email %></p>
    </section>
  </aside>
  <div class="col-sm-8">
    <% if @user.orders.any? %>
    <h3>Orders (<%= @user.orders.count %>)</h3>
      <ol class="orders">
        <%= render @orders %>
      </ol>
      <%= will_paginate @orders %>
    <% end %>
  </div>
</div>