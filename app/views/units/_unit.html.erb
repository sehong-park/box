<li>
  <div class="row">
    <div class="col-sm-4">
      <a href="#" class="thumbnail">
        <%= image_tag(unit.img.url(:medium), alt: unit.unit_type, class: "unit") %>
      </a>
    </div>

    <div class="col-sm-8">
      <div class="caption">
        <h3>
          <%= unit.name %>
          <% if current_user.admin? %>
            <%= link_to '수정', edit_admin_unit_path(unit), class: 'btn btn-sm btn-warning' %>
            <%= link_to '삭제', admin_unit_path(unit), method: :delete, class: 'btn btn-sm btn-danger', data: { confirm: 'Are you sure?' } %>
          <% end %>
        </h3>
        <p><%= unit.content %></p>
      </div>
    </div>
  </div>
</li>