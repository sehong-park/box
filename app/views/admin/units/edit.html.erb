<% provide(:title, "유닛 수정") %>
<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <%= form_for @unit, url: admin_unit_path(@unit), method: :patch do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <div class="form-group">
        <label for="unit_name">유닛 타입</label>
        <%= select_tag("unit[unit_type]", options_for_select(Unit::UNIT_IMAGE.keys), prompt: "타입", class: "form-control input-lg") %>
      </div>
      <div class="form-group">
        <label for="unit_name">유닛 이름</label>
        <%= text_field(:unit, :name, class: "form-control input-lg", placeholder: "여행용캐리어")%>
      </div>
      <div class="form-group">
        <label for="unit_content">내용물 간단설명</label>
        <%= text_area(:unit, :content, class: "form-control input-lg", placeholder: "간략히 적어주세요")%>
      </div>
      
      <div class="form-group">
        <label for="unit_ex_img">이전 사진</label>
        <%= image_tag(@unit.img.url(:medium), alt: @unit.unit_type, class: "unit") %>
      </div>
    
      <div class="form-group">
        <label for="unit_img">유닛 사진</label>
        <%= f.file_field :img %>
        <p class="help-block">Example block-level help text here.</p>
      </div>
      <%= hidden_field(:unit, :order_id) %>
      <button type="submit" class="btn btn-lg btn-success">수정</button>
    <% end %>
  </div>
</div>