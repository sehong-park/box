<div class="panel panel-default">
  <div class="panel-heading">
    회송중 <span class="badge"><%= delivering_orders.count %></span>
  </div>
  <div class="panel-body">
    <table class="table">
      <thead>
        <tr>
          <th><span class="glyphicon glyphicon-user"></span>사용자</th>
          <th><span class="glyphicon glyphicon-phone"></span>연락처</th>
          <th><span class="glyphicon glyphicon-calendar"></span>회송일</th>
          <th><span class="glyphicon glyphicon-home"></span>회송장소</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% delivering_orders.each do |delivering_order| %>
        <tr>
          <td><%= link_to(delivering_order.user.name, user_path(delivering_order.user)) %></td>
          <td><%= delivering_order.user.phone %></td>
          <td><%= delivering_order.delivery_datetime.strftime("%Y-%m-%d %H시(+3)") %></td>
          <td><%= delivering_order.delivery_address %></td>
          <td><%= link_to '회송완료', admin_order_path(delivering_order), method: :patch, class: 'btn btn-sm btn-success' %></td>
          <td><%= link_to '보기', order_path(delivering_order), class: 'btn btn-sm btn-default' %></td>
          <td><%= link_to '수정', edit_order_path(delivering_order), class: 'btn btn-sm btn-warning' %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>