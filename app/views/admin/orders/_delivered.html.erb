<div class="panel panel-default">
  <div class="panel-heading">
    회송 완료 <span class="badge"><%= delivered_orders.count %></span>
  </div>
  <div class="panel-body">
    <table class="table">
      <thead>
        <tr>
          <th><span class="glyphicon glyphicon-user"></span>사용자</th>
          <th><span class="glyphicon glyphicon-phone"></span>연락처</th>
          <th><span class="glyphicon glyphicon-calendar"></span>회송일</th>
          <th><span class="glyphicon glyphicon-home"></span>회송장소</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% delivered_orders.each do |delivered_order| %>
        <tr>
          <td><%= link_to(delivered_order.user.name, user_path(delivered_order.user)) %></td>
          <td><%= delivered_order.user.phone %></td>
          <td><%= delivered_order.delivery_datetime.strftime("%Y-%m-%d %Hh") %></td>
          <td><%= delivered_order.delivery_address %></td>
          <td><%= link_to '회송완료', admin_order_path(delivered_order), method: :patch, class: 'btn btn-sm btn-success' %></td>
          <td><%= link_to '보기', order_path(delivered_order), class: 'btn btn-sm btn-default' %></td>
          <td><%= link_to '수정', edit_order_path(delivered_order), class: 'btn btn-sm btn-warning' %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>