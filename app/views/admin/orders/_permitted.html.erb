<div class="panel panel-default">
  <div class="panel-heading">
    픽업 대기 <span class="badge"><%= orders_waiting_for_pickup.count %></span>
  </div>
  <div class="panel-body">
    <table class="table">
      <thead>
        <tr>
          <th><span class="glyphicon glyphicon-user"></span>사용자</th>
          <th><span class="glyphicon glyphicon-phone"></span>연락처</th>
          <th><span class="glyphicon glyphicon-calendar"></span>픽업일</th>
          <th><span class="glyphicon glyphicon-home"></span>픽업장소</th>
          <th colspan="4"></th>
        </tr>
      </thead>

      <tbody>
        <% orders_waiting_for_pickup.each do |order| %>
        <tr>
          <td><%= link_to(order.user.name, user_path(new_order.user)) %></td>
          <td><%= order.user.phone %></td>
          <td><%= order.pickup_datetime.strftime("%Y-%m-%d %Hh") %></td>
          <td><%= order.pickup_address %></td>
          <td><%= link_to '픽업완료', admin_order_path(order), method: :patch, class: 'btn btn-sm btn-success' %></td>
          <td><%= link_to '보기', order_path(new_order), class: 'btn btn-sm btn-default' %></td>
          <td><%= link_to '수정', edit_order_path(new_order), class: 'btn btn-sm btn-warning' %></td>
          <td><%= link_to '삭제', order_path(new_order), method: :delete, class: 'btn btn-sm btn-danger', data: { confirm: 'Are you sure?' } %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>