<%= form_for :user do |user_form| %>
  <%= render 'shared/error_messages', object: @user %>

  <div class="form-group">
    <%= user_form.label :email, "이메일" %>
    <%= user_form.text_field(:email, class: "form-controll", placeholder: "shnam@iambox.co.kr")%>
  </div>

  <div class="form-group">
    <%= user_form.label :phone, "연락처" %>
    <%= user_form.text_field(:phone, class: "form-controll", placeholder: "010-1234-5678") %>
  </div>

  <div class="form-group">
    <%= user_form.label :password, "비밀번호" %>
    <%= user_form.password_field :password %>
  </div>

  <div class="form-group">
    <%= user_form.label :password_confirmation, "비밀번호 확인" %>
    <%= user_form.password_field :password_confirmation %>
  </div>
<% end %>