<%= form_for :user do |user_form| %>
  <%= render 'shared/error_messages', object: @user %>

  <div class="form-group">
    <%= user_form.label :email, "이메일" %>
    <%= user_form.text_field(:email, class: "form-control input-lg", placeholder: "shnam@iambox.co.kr")%>
  </div>

  <div class="form-group">
    <%= user_form.label :phone, "연락처" %>
    <%= user_form.text_field(:phone, class: "form-control input-lg", placeholder: "010-1234-5678") %>
  </div>
<% end %>