<div class="row">
  <div class="col-sm-3">
    <div class="form-group">
      <label for="order_pickup_location">픽업 지역</label>
      <%= select_tag("order[pickup_location]", options_for_select(Order::LOCATION, @order.pickup_location), selected: "서울", class: "form-control input-lg") %>
    </div>
  </div>
  <div class="col-sm-6">
    <div class="form-group">      
      <label for="order_pickup_address">픽업 주소</label>
      <%= text_field(:order, :pickup_address, class: "form-control input-lg", placeholder: "예) 서울시 강남구 역삼동 683-34 4층")%>
    </div>
  </div>
  <div class="col-sm-3">
    <label>픽업 시간</label>
    <%= select_tag("order[pickup_datetime][hour]", options_for_select(Order::AVAILABLE_MEETING_TIMES, @order.pickup_datetime ? @order.pickup_datetime.hour : 10), class: "form-control input-lg") %>
  </div>
</div>

<div class="row">
  <div class="col-sm-3">
    <div class="form-group">
      <label for="order_pickup_location">회송 지역</label>
      <%= select_tag("order[delivery_location]", options_for_select(Order::LOCATION, @order.delivery_location), selected: "서울", class: "form-control input-lg") %>
    </div>
  </div>
  <div class="col-sm-6">
    <div class="form-group">
      <label for="order_delivery_address">회송 주소</label>
      <%= text_field(:order, :delivery_address, class: "form-control input-lg", placeholder: "예) 서울시 강남구 역삼동 683-34 4층")%>
    </div>
  </div>
  <div class="col-sm-3">
    <label>회송 시간</label>
    <%= select_tag("order[delivery_datetime][hour]", options_for_select(Order::AVAILABLE_MEETING_TIMES, @order.delivery_datetime ? @order.delivery_datetime.hour : 10), class: "form-control input-lg") %>
  </div>
</div>