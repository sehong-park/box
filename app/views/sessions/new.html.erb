<% provide(:title, "로그인") %>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: sessions_path) do |f| %>

    <div class="form-group">
      <%= f.label :email, "이메일" %>
      <%= f.text_field :email, class: "form-control input-lg", placeholder: "box@email.com" %>
    </div>

    <div class="form-group">
      <%= f.label :password, "비밀번호" %>
      <%= f.password_field :password, class: "form-control input-lg",  placeholder: "비밀번호" %>
    </div>
    
      <%= f.submit "로그인", class: "btn btn-lg btn-primary form-control" %>
    <% end %>

    <p class="help-block">처음 방문하셨나요? <%= link_to "가입하기!", signup_path %></p>
  </div>
</div>