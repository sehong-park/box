<% if questions.any? %>
<div class="panel panel-<%= defined?(order) ? 'default' : 'primary' %>" id="qna">
  <!-- Default panel contents -->
  <div class="panel-heading"><strong>질문 - 답변</strong></div>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>질문</th>
        <th>작성자</th>
        <th>등록일</th>
      </tr>
    </thead>

    <tbody>
      <% questions.each do |question| %>
      <%= render 'articles/question', q: question %>
      <% end %>
    </tbody>
  </table>
</div>
<% end %>
<% if defined? order %>
<%= link_to "질문하기", "/question/0/#{order.id}", class: "btn btn-sm btn-primary pull-left col-md-1" %>
<% else %>
<%= link_to "질문하기", '/question/0', class: "btn btn-lg btn-primary pull-right" %>
<% end %>