<header class="navbar navbar-default" role="navigation" id="header">
  <div class="container-fluid">
    <div class="row">
      <div class="col-xs-12">
        <ul class="nav navbar-nav pull-right icons-nav">
          <li><%= link_to image_tag("header/facebook.png", class: "icon-header"), "http://facebook.com/iamboxkorea" %></li>
          <li><%= link_to image_tag("header/blog.png", class: "icon-header"), "http://blog.naver.com/hoon_smile/220085598601" %></li>
        </ul>
      </div>
      <div class="col-xs-12">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <%= link_to image_tag("welcome/nav_logo.jpg", id: "logo"), root_path, id: "logo" %>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <nav>
            <ul class="nav navbar-nav nav-pills pull-right">
              <% unless current_page?(root_path) %>
              <li><%= link_to bs_icon(:home, :홈), root_path %></li>
              <% end %>
              <li><%= link_to "! 사용법", root_path<<"#usage" %></li>
              <li><%= link_to "￦ 요금", root_path<<"#pricing" %></li>
              <li><%= link_to "? 질문", "/qna" %></li>
              <li><%= link_to bs_icon(:earphone, "02-6091-8008"), "tel:02-6091-8008" %></li>
              <% if signed_in? %>
              <li id="fat-menu" class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  <%= current_user.email%><b class="caret"></b>
                </a>
                <ul class="dropdown-menu dropdown-menu-right">
                  <li><%= link_to "내 정보", user_path(current_user) %></li>
                  <li class="divider"></li>
                  <li>
                    <%= link_to "로그아웃", signout_path, method: "delete" %>
                  </li>
                </ul>
              </li>
              <% else %>
              <li><%= link_to bs_icon("user", "로그인"), signin_path %></li>
              <% end %>
            </ul>
          </nav>
        </div>
      </div>
    </div>
  </div>
</header>

<div id="go-top">
  <a href="#header" class="btn btn-primary btn-lg pull-right" role="button">
    TOP <span class="glyphicon glyphicon-chevron-up"></span>
  </a>
</div>